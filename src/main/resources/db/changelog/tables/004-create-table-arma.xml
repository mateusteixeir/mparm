<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="4" author="Mateus Soares">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ARMA"/>
            </not>
        </preConditions>
        <createTable tableName="ARMA">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="MODELO" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="CALIBRE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="FABRICANTE_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="NUMERO_SERIE" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="CREATED_AT" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_AT" type="DATE"/>
            <column name="DELETED_AT" type="DATE"/>
        </createTable>

        <!-- Adicionando as chaves estrangeiras -->
        <addForeignKeyConstraint
                baseTableName="ARMA"
                baseColumnNames="CALIBRE_ID"
                referencedTableName="CALIBRE"
                referencedColumnNames="ID"
                constraintName="FK_ARMA_CALIBRE"/>
        <addForeignKeyConstraint
                baseTableName="ARMA"
                baseColumnNames="FABRICANTE_ID"
                referencedTableName="FABRICANTE"
                referencedColumnNames="ID"
                constraintName="FK_ARMA_FABRICANTE"/>
    </changeSet>

</databaseChangeLog>
